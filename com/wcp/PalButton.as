package com.wcp {	import flash.display.MovieClip;	import flash.text.TextFormat;	import flash.text.TextField;	import flash.events.MouseEvent;	public class PalButton extends MovieClip {		public var index:String;		public var bg:MovieClip;		public var lite:MovieClip;		public var spot:MovieClip;		public var lit:Boolean = false;		public var lbl:TextField;		var myFormat:TextFormat = new TextFormat();		public function PalButton (i:Object,w:int,h:int,c:Number=0x000000,bevel=false) {			this.myFormat.size = 15;			this.myFormat.font = "sans";			this.myFormat.bold = true;			this.index = (i);			this.name = "mc"+i;			ww = (bevel) ? w-2 : w;			hh = (bevel) ? h-2 : h;			if(bevel) {				shade = this.drawBox(w,h,c,1,0x111111,1);				shade.x=shade.y=-1;				bevel = this.drawBox(ww,hh,c,1,0xDDDDDD,1);				bevel.x=bevel.y=-1;			}			this.bg = this.drawBox(ww,hh,c,1,0,0);			bg.x=bg.y=0;			this.lite = this.drawBox(w,h,0xFFFFFF,1,0,0);			this.lite.alpha = 0;						lbl = new TextField();			lbl.text = i;			lbl.x = 5;			lbl.y = 5;			lbl.textColor = 0x999999;			lbl.selectable = false;			this.addChild(lbl);					this.spot = this.drawBox(w,h,0xFF0FF,0,0,0);			this.spot.buttonMode = true;			this.spot.useHandCursor = true;		}		private function drawBox(w:int,h:int,bgcolor=0X333333,bgalpha:Number=1,lncolor=0xFFFFFF,lnalpha:Number=1){			var obj = new MovieClip();			addChild(obj);			obj.graphics.lineStyle(1,lncolor,lnalpha);			obj.graphics.beginFill(bgcolor,bgalpha);			obj.graphics.drawRoundRect(0,0,w,h,5);			obj.graphics.endFill();			return obj;		}	}}